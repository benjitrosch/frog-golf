{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./build/",
    "typeRoots": ["node_modules/@types"],
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2020"
  },
  "include": ["src/client", "index.d.ts"],
  "exclude": ["src/server", "node_modules"]
}
